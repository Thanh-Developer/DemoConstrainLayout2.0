        <activity android:name="com.demo.constraint2.constraintset.MovieActivity" />
        <activity android:name="com.demo.constraint2.constraintset.CupcakeActivity" />
        <activity android:name="com.demo.constraint2.circular.CircularConstraintActivity" />
