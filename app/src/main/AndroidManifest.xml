            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.demo.constraint2.motionlayout.MotionActivity" />
        <activity android:name="com.demo.constraint2.motionlayout.MotionKeyFrameActivity"/>
